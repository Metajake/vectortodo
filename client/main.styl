header
  margin-bottom 15px
  &.hide-completed
    float right

h1
  font-size:2rem

form
  margin-top 10px
  margin-bottom -10px
  position relative

button.deleteAll
  float right
  &:focus
    background-color buttonface

select
  border 1px solid #ccc

.new-task
  input
    box-sizing border-box
    padding 10px 0
    background transparent
    border-bottom #f48fb1 solid 2px
    width 100%
    padding-right 80px
    font-size 1em
    &:focus
      outline 0
    &::-webkit-input-placeholder
      color #c66
    &:-moz-placeholder
      color #c66
    &::-moz-placeholder
      color #c66
    &:-ms-input-placeholder
      color #c66

.delete
  float right
  font-weight bold
  background none
  font-size 1em
  border none
  position relative

.checked
  color #888
  .text
    text-decoration line-through

li

  &.private
    background #eee
    border-color #ddd

.toggle-private
  margin-left 5px

.force-break
  overflow-wrap break-word
  word-wrap break-word
  -ms-word-break break-all
  word-break break-word
  -ms-hyphens auto
  -moz-hyphens auto
  -webkit-hyphens auto
  hyphens auto

@media (max-width: 600px)
  li
    padding 12px 15px
    span
      width:80%
  .search
    width 150px
    clear both
  .new-task
    input
      padding-bottom 5px
  button.deleteAll
    float none
    margin-top 15px
